<% require 'pry' %>
<% title 'Account Activation' %>
<%= simple_form_for resource, :as => resource_name, :url => update_user_confirmation_path, :html => {:class => 'form-horizontal', :method => 'put'}, :id => 'activation-form' do |f| %>
  <%= render 'shared/error_messages' %>
  <fieldset>
    <legend>
      Account Activation
      <% if resource.email %>
        for <%= resource.email %>
      <% end %>
    </legend>
    <%= f.simple_fields_for :name do |n| %>
      <%= n.input :honorific, collection: %w[Mr Miss Ms Mrs Prof. Dr], label: "Title"%>
      <%= n.input :first_name %>
      <%= n.input :other_names, required: false %>
      <%= n.input :last_name %>
      <%= n.input :preferred_name, required: false %>
    <% end %>
    <% if @requires_password %>
      <%= f.input :password, label: 'Choose a Password:' %>
      <%= f.input :password_confirmation, label: 'Password Confirmation:' %>
    <% end %>
    <%= hidden_field_tag :confirmation_token, @confirmation_token %>
    <p><%= f.submit "Activate" %></p>
  </fieldset>
<% end %>